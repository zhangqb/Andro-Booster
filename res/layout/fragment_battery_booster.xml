<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox_battery_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manually Boost"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_battery_dim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Dim Backlight"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox_battery_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Disable WIFI"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox_battery_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Disable Bluetooth"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox_battery_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Disable Vibration"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_wifiBooster_boostBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Quick Battery Boost"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="sans" />

</RelativeLayout>